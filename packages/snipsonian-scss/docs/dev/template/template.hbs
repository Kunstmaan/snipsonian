<!DOCTYPE html>
<html class="livingcss">
<head>
    <title>{{title}}</title>

    <link href="//fonts.googleapis.com/css?family=Nunito:400,700|Roboto+Slab:400,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

    <!-- examples styles -->
    {{#each globalStylesheets}}
    <link rel="stylesheet" href="{{this}}">
    {{/each}}
    <!-- /examples styles -->

    <script defer src="/js/docs.js"></script>
</head>
<body class="ss-docs">
    <div class="ss-docs__wrapper">

        <header class="ss-docs-header">
            <div class="ss-docs-header-title-container">
                <h1 class="ss-docs-header-title">
                    <a href="{{navbar.0.url}}">{{title}}</a>
                </h1>
            </div>
        </header>

        <div class="ss-docs__container">
            <nav class="ss-docs-nav">
                <div class="ss-docs-nav__container">
                    {{#each pages}}
                        {{#xif name '!=' 'index'}}
                            {{../name}}
                        {{/xif}}
                        {{#each sections}}
                            <a class="ss-docs-nav__link" href="{{../id}}.html#{{id}}">{{name}}</a>
                        {{/each}}
                    {{/each}}
                </div>
            </nav>
            <main class="ss-docs-main" role="main">
                {{#each sections}}
                    <article id="{{id}}">
                        <h2>{{name}}</h2>
                        {{~> section}}

                        {{#children}}
                            {{~> childSection}}
                        {{/children}}
                    </article>
                {{/each}}
            </main>
        </div>
    </div>
</body>
</html>
